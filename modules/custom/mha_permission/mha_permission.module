/**
 * Implements hook_form_alter()
 */
function mha_permission_form_alter(&$form, &$form_state, $form_id){
	if($form_id == 'user_profile_form' && !user_access('administer membership')){
		unset($form['field_membership_class']);
		unset($form['field_committee_position']);
		unset($form['field_approved']);
		unset($form['field_mailchimp']);
		unset($form['field_expiry_']);
		unset($form['field_paypal_transactions']);
		unset($form['field_user_status']);
		unset($form['field_renewal_email_letter_sent']);
		unset($form['field_admission_date']);
		unset($form['field_direct_debit_subscription']);
	}
	
	if($form_id == 'user_login'){
		$form['intro'] = array(
			'#type' => 'markup',
			'#markup' => '<p>Existing members can log in to manage their membership account, including updating the contact information the Association holds and online renewals. You username is the email address you used when applying for membership. If you haven’t received a password, or have forgotten in then please use the ‘Request new password’ link above.</p>',
			'#weight' => -100,
		);
	}
}

/**
 * Implements hook_user_insert
 */
function mha_permission_user_insert(&$edit, $account, $category) {
	if($account->field_membership_class[LANGUAGE_NONE][0]['value'] != 'resident'){
		//Ignore resident members so we don't spam the committee when we do the bulk upload
		$params['account'] = $account;
		drupal_mail('mha_permission', 'insert_user', 'membership@manorhallassociation.co.uk', user_preferred_language($account), $params);
	}
}

/**
 * Implements hook_user_update
 */
function mha_permission_user_update(&$edit, $account, $category) {
  $params['account'] = $account;
	drupal_mail('mha_permission', 'update_user', 'membership@manorhallassociation.co.uk', user_preferred_language($account), $params);
}

/**
 * Implements hook_init()
 */
function mha_permission_init(){
	if(arg(0) == 'user' && is_numeric(arg(1))){
		$account = user_load(arg(1));
		//if($account->field_user_status[LANGUAGE_NONE][0]['value'] == 'pending');
		switch($account->field_user_status[LANGUAGE_NONE][0]['value']){
			case 'pending' :
				$_SESSION['account'] = $account;
				drupal_set_message(t("Payment hasn't been received for this application, click !here to pay online or setup a direct debit.", array(
																													'!here' => l('here', 'membership/apply/payment')
																													)
														 ),'error'
													 );
				break;
			case 'paid' :
				drupal_set_message('Payment has been successfully received and your application is awaiting approval by the Executive Committee.', 'warning');
				break;
			case 'renew' :
				$_SESSION['account'] = $account;
				drupal_set_message(t("Renewal is due on this account; please click !here to pay online or setup a direct debit.", array(
																													'!here' => l('here', 'user/renewal')
																													)
														 ),'warning'
													 );
				break;
			case 'expired' :
				$_SESSION['account'] = $account;
				drupal_set_message(t("This account has lapsed and is scheduled for deletion. If you wish you continue your membership please click !here to pay online or setup a direct debit.", array(
																													'!here' => l('here', 'user/renewal')
																													)
														 ),'error'
													 );
				break;
		}
	}
}
