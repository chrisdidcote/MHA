function mha_permission_membership_paid_form_submit($form, &$form_state){
	$values = $form_state['values'];
	$account = user_load($values['uid']);
	$account->field_user_status[LANGUAGE_NONE][0]['value'] = 'paid';
	$account->field_expiry_[LANGUAGE_NONE][0]['value'] = strtotime('+3 years');
	mha_permission_log_entry(t('!duration years membership manually added: !name', array('!duration' => $values['duration'] , '!name' => $account->realname)), $account->uid);
	user_save($account);
	$params['account'] = $account;
	$params['duration'] = $values['duration'];
	drupal_mail('mha_permission', 'payment_application', $account->mail, user_preferred_language($account), $params);
	$form_state['redirect'] = 'membership/home';
}

function mha_permission_user_renewal(){
	global $user;
	$account = user_load($user->uid);
	$item = 'Renewal/Top-up of Membership';
	$amount = 20.00;
	$return = 'http://www.manorhallassociation.co.uk';
	$_SESSION['account'] = $account;
	//print_r($account);

	switch($account->field_user_status[LANGUAGE_NONE][0]['value']){
		case 'pending' :
			$intro = "<p>Payment is still due for your membership application, you can pay online or direct debit using the appropriate link below.</p>";
			$dd = mha_dd_page();
			break;
		case 'paid' :
			$intro = "<p>Payment on your account is up-to-date. If you wish to add additional years to your membership you can do so by clicking the button below, additional years are added in blocks of three, costing &pound;20.00.</p>";
			$dd = '<h2>Direct Debit</h2>';
			$dd .= "<p>As payment on your account is up-to-date it isn't possible to setup a new direct debit until your next renewal period.</p>";
			break;
		case 'active' :
			$intro = "<p>Payment on your account is up-to-date. If you wish to add additional years to your membership you can do so by clicking the button below, additional years are added in blocks of three, costing &pound;20.00.</p>";
			$dd = '<h2>Direct Debit</h2>';
			$dd .= "<p>As payment on your account is up-to-date it isn't possible to setup a new direct debit until your next renewal period.</p>";
			break;
		case 'renew' :
			$intro = "<p>Your membership is due for renewal, you can pay by credit/debit card or setup a direct debit by clicking the appropriate link below. Renewal fees are &pound;20.00 for three years.</p>";
			if($account->field_membership_class[LANGUAGE_NONE][0]['value'] == 'student'){
				$intro .= '<p><strong>By renewing your membership you will be converting to a Full/Alumni Member of the Association. If you are still a student of the University then please contact us at membership@manorhallassociation.co.uk.</strong></p>';
			}
			$dd = '<h2>Direct Debit</h2>';
			$dd = mha_dd_page();
			break;
		case 'expired' :
			$intro = "<p>Your membership has expired, if you wish to remain a member you can pay by credit/debit card or setup a direct debit by clicking the appropriate link below. Renewal fees are £20.00 for three years.</p>";
			if($account->field_membership_class[LANGUAGE_NONE][0]['value'] == 'student'){
				$intro .= '<p><strong>By renewing your membership you will be converting to a Full/Alumni Member of the Association. If you are still a student of the University then please contact us at membership@manorhallassociation.co.uk.</strong></p>';
			}
			$dd = '<h2>Direct Debit</h2>';
			$dd = mha_dd_page();
			break;
	}
	
	$output = $intro;
	$output .= '<form action="https://www.paypal.com/cgi-bin/webscr" method="post">

<!-- Identify your business so that you can collect the payments. -->
<input type="hidden" name="business" value="payments@manorhallassociation.co.uk">

<!-- Specify a Buy Now button. -->
<input type="hidden" name="cmd" value="_xclick">

<!-- Specify details about the item that buyers will purchase. -->
<input type="hidden" name="item_name" value="' . $item . '">
<input type="hidden" name="amount" value="' . $amount . '">
<input type="hidden" name="currency_code" value="GBP">

<input type="hidden" name="notify_url" value="http://manorhallassociation.co.uk/membership/ipn">
<input type="hidden" name="custom" value="' . $account->uid . '">
<input type="hidden" name="return" value="' . $return . '">

<!-- Display the payment button. -->
<button class="btn btn-primary form-submit" id="edit-submit" name="op" value="Submit" type="submit">Pay by Credit/Debit Card</button>

</form>';
	$output .= '<p></p>';
	$output .= $dd;

	return $output;
